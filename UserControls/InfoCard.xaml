<UserControl x:Class="Cr_Interface.UserControls.InfoCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             Name="infoCard">
    <Border Margin="10 0" Style="{StaticResource whiteBorder}">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Icon:PackIconMaterial Kind="ProgressCheck" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding ElementName=infoCard, Path=Title}" Style="{StaticResource titleText}"/>
            </StackPanel>

            <TextBlock Text="{Binding ElementName=infoCard, Path=SubTitle}" Style="{StaticResource secondaryText}"/>

            <!--<Slider Style="{DynamicResource SliderStyle1}" x:Name="slider" Margin="0 5 0 0" IsSelectionRangeEnabled="True"
                    Value="{Binding ElementName=infoCard, Path=Amount}" SelectionEnd="{Binding ElementName=slider, Path=Value}"/>-->
        </StackPanel>
    </Border>
</UserControl>
